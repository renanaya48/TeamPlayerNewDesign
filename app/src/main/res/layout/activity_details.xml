<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".activity_details">


    <Button
        android:id="@+id/request"
        android:layout_width="116dp"
        android:layout_height="37dp"
        android:layout_marginTop="460dp"
        android:onClick="request"
        android:text="request"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backToResultsButton"
        android:layout_width="247dp"
        android:layout_height="67dp"
        android:onClick="backToResults"
        android:text="back to Results"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_of_participations" />

    <TextView
        android:id="@+id/description_details_1"
        android:layout_width="200dp"
        android:layout_height="105dp"
        android:layout_marginTop="48dp"
        android:background="#FFC107"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_details_name" />

    <TextView
        android:id="@+id/number_of_participations"
        android:layout_width="186dp"
        android:layout_height="62dp"
        android:layout_marginTop="40dp"
        android:background="#00BCD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_details_1" />

    <TextView
        android:id="@+id/activity_details_name"
        android:layout_width="190dp"
        android:layout_height="51dp"
        android:layout_marginTop="76dp"
        android:background="#CDDC39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/age_Range_textView"
        android:layout_width="102dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:background="#9C27B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_of_participations" />
</androidx.constraintlayout.widget.ConstraintLayout>