<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        tools:context=".registration">

        <TextView
            android:id="@+id/emailFailed"
            android:layout_width="169dp"
            android:layout_height="20dp"
            android:layout_marginTop="176dp"
            android:layout_marginEnd="60dp"
            android:textColor="#273272"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/passwordFailed"
            android:layout_width="163dp"
            android:layout_height="43dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="64dp"
            android:textColor="#273272"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activity_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="88dp"
            android:text="Name:"
            android:textColor="#273272"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="144dp"
            android:text="E-mail:"
            android:textColor="#273272"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="208dp"
            android:text="Password:"
            android:textColor="#273272"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="119dp"
            android:layout_height="69dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="280dp"
            android:text="Confirm password"
            android:textColor="#273272"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/text_view_to_fill"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#2C3469"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="144dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/text_view_to_fill"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/passwordConfrim"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="296dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/text_view_to_fill"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/password"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="208dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/text_view_to_fill"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button"
            android:layout_width="312dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="444dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/title_border"
            android:onClick="saveData"
            android:text="Start!"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/age_text_view"
            android:layout_width="146dp"
            android:layout_height="36dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Date Of Birth"
            android:textColor="#273272"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.102" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="198dp"
            android:layout_height="129dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="544dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logowhitetranperent" />

        <TextView
            android:id="@+id/select_date"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:layout_marginTop="372dp"
            android:layout_marginEnd="72dp"
            android:gravity="center"
            android:text="select a date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
