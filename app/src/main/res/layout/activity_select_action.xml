<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewForSelectAction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_upside_try"
    android:fillViewport="true"
    tools:context=".select_action">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/select_action_layout"
        android:layout_width="match_parent"
        android:layout_height="500dp">


        <Button
            android:id="@+id/button7"
            android:layout_width="212dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/select_action_backround"
            android:fontFamily="@font/lato_regular"
            android:onClick="joinActivity"
            android:text="Join Activity"
            android:textColor="#012d8c"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeText" />

        <Button
            android:id="@+id/button3"
            android:layout_width="212dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/select_action_backround"
            android:fontFamily="@font/lato_regular"
            android:onClick="createActivity"
            android:text="Create activity "
            android:textColor="#012d8c"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="212dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/select_action_backround"
            android:fontFamily="@font/lato_regular"
            android:onClick="myActivity"
            android:text="My activities "
            android:textColor="#012d8c"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/signOut"
            android:layout_width="90dp"
            android:layout_height="39dp"
            android:background="@null"
            android:fontFamily="@font/lato_regular"
            android:onClick="signOutButton"
            android:text="Log out"
            android:textColor="#012d8c"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/PhotoButtun"
            android:layout_width="44dp"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/image_circle"
            android:src="@drawable/ic_add_a_photo_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="280dp"
            android:layout_height="85dp"
            android:layout_marginTop="56dp"
            android:background="@null"
            android:fontFamily="@font/lato_regular"
            android:paddingTop="20dp"
            android:textAllCaps="true"
            android:textColor="#012d8c"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="56dp"
            android:src="@drawable/ic_person_no_image"
            app:civ_border_color="#2e3191"
            app:civ_border_width="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>