<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fillViewport="true">

    android:scrollbarAlwaysDrawHorizontalTrack="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        tools:context=".registration">

        <Button
            android:id="@+id/find_activities2"
            android:layout_width="155dp"
            android:layout_height="126dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/logowhitetranperent"
            android:onClick="SaveData"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/logInButton"
            android:layout_width="143dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="544dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/small_button"
            android:onClick="logIn"
            android:text="Login"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="67dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="268dp"
            android:text="Email:"
            android:textColor="#273272"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="348dp"
            android:text="Password:"
            android:textColor="#273272"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="252dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/text_view_to_fill"

            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/password"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/text_view_to_fill"

            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/find_activities"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.363" />

        <Button
            android:id="@+id/find_activities"
            android:layout_width="306dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="624dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/title_border"
            android:onClick="newUser"
            android:text="still don't have a membership? Press here to start to WORK OUT!"
            android:textColor="@android:color/background_light"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.662"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="137dp"
            android:layout_height="40dp"
            android:layout_marginTop="452dp"
            android:layout_marginEnd="60dp"
            android:onClick="resetPassword"
            android:background="@android:color/transparent"
            android:text="Click here"
            android:textColor="#273272"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="188dp"
            android:layout_height="39dp"
            android:layout_marginTop="412dp"
            android:layout_marginEnd="68dp"
            android:text="Show Password"
            android:textColor="#273272"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/logInFailed"
            android:layout_width="169dp"
            android:layout_height="20dp"
            android:layout_marginTop="392dp"
            android:layout_marginEnd="84dp"
            android:textColor="#273272"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="194dp"
            android:layout_height="35dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="456dp"
            android:text="Forgot your Password?"
            android:textColor="#273272"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>